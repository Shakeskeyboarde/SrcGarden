  "author": "Chris Ackerman <chris@topher.land>",
  "repository": {
    "type": "git",
    "url": "https://github.com/Shakeskeyboarde/SrcGarden"
  },
  "scripts": {
    "postinstall": "npm -ws --if-present run postinstall",
    "lint": "eslint 'packages/*/src/**/*.{js,cjs,ts,tsx}'",
